{
  "compilerOptions": {
    "downlevelIteration": true,
    "allowJs": true,
    "declaration": false,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "importHelpers": true,
    "lib": ["dom", "es6", "es2015", "es5"],
    "module": "commonjs",
    "moduleResolution": "node",
    "noImplicitReturns": true,
    "noImplicitAny": false,
    "outDir": "build",
    "rootDirs": ["./src"],
    "plugins": [
      {
        "name": "tslint-language-service"
      }
    ],
    "removeComments": true,
    "sourceMap": true,
    "strict": true,
    "target": "es6",
    "resolveJsonModule": true,
    "esModuleInterop": true
  },
  "paths": {
      "*": [
        "*",
        "../types/*"
      ]
  },
  "include": ["./src/**/*"],
  "exclude": ["node_modules"]
}
